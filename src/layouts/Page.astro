---
import '../styles/global.css'
import Header from '../components/page/Header.astro'
import Footer from '../components/page/Footer.astro'

const { title, bgHeader } = Astro.props
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/src/assets/icons/favicon.svg" />
    <title>{ title }</title>
</head>
<body class="min-h-screen flex flex-col">
    <Header bg={bgHeader} />
    <main class="flex-1">
        <slot />
    </main>
    <Footer />
</body>
</html>