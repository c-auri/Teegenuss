---
import Page from '../layouts/Page.astro'
import Frame from '../components/page/Frame.astro'
import GlossaryEntry from '../components/glossary/Entry.astro'

import  { getCollection } from 'astro:content'

const tags = await getCollection('tags')
const bg = "bg-white"
---
<Page title="Glossar" bgHeader={bg}>
    <Frame bg={bg}>
        <section class="my-24 lg:my-32">
            <h1 class="my-14 lg:my-24 font-bold text-3xl text-center">Glossar</h1>
            <div class="grid sm:grid-cols-[repeat(auto-fit,minmax(42ch,1fr))] justify-items-center gap-8 lg:gap-16">
            {
                tags.map(tag => <GlossaryEntry tag={tag} />)
            }
            </div>
        </section>
    </Frame>
</Page>