---
import { getEntry } from "astro:content";

const { data } = Astro.props
const shop = await getEntry('shops', data.purchase.shop.id)
---
<span>
    {data.type}
</span>
|
<span>
    <a href={data.purchase.productUrl} class="underline decoration-dashed underline-offset-4 hover:text-gray-700">
        <span class="sm:hidden" title={shop.data.name}>{shop.data.shorthand}</span>
        <span class="hidden sm:inline">{shop.data.name}</span>
    </a>
</span>
|
<span>{data.purchase.amount}</span>
|
<span>
    {data.purchase.pricePer100g}
    <span class="hidden sm:inline">
        <sup>{data.purchase.currency}</sup>&frasl;<sub>g</sub>
    </span>
</span>