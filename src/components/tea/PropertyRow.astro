---
const { group, title, dictionary } = Astro.props
---
<tr>
    <th colspan="2" class="pb-2 align-top text-center text-2xl lg:text-left">
        {title}
    </th>
</tr>
{
    group.map(([key, value]: string[], index: number) => (
        <tr>
            <td class="pr-2 align-top text-gray-700 text-right lg:text-left">{dictionary[key!]}</td>
            <td class={`pl-2 align-top ${index === group.length - 1 && "pb-6"}`}>{value}</td>
        </tr>
    ))
}