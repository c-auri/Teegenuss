        <div class="pt-3 py-5">
            <Logo mode="light" />
        </div>
        <div></div>
        {
            relative && 
            <div class="select-none tracking-wider text-lg text-gray-500 flex gap-3  hover:text-gray-600 lg:gap-5">
                <a class="hover:text-gray-800" href={relative.prevUrl}>&#8249; zur√ºck</a>
                <a class="hover:text-gray-800" href={relative.nextUrl}>weiter &#8250;</a>
            </div>
        }
