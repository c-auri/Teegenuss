---
type Props = {
  bg?: string,
  size?: "sm" | "md"
}

const { bg = "", size = "md"} = Astro.props
const maxWidth = size === "md" ? "max-w-screen-2xl" : "max-w-screen-xl"
---
<div class=`max-w-screen flex justify-center ${bg}`>
  <div class={`${maxWidth} w-screen px-2 sm:px-5 md:px-8`}>
    <slot />
  </div>
</div>